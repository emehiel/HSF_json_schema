{
    "$id": "https://emehiel.github.io/HSF_json_schema/HSF_definitions.json",
    "$schemas": "https://json-schema.org/draft/2020-12/schema",
    "description": "schema for the Horizon Simulation Framework",
    "$defs":
    {
        "task": {
            "type": "object",
            "properties": 
            {
              "name": { "type": "string" },
              "type": { "type": "string" },
              "maxTimes": { "type": "integer", "default": 1 },
              "target": { "$ref": "#/$defs/target" }
            },
            "required": [ "name", "type", "target" ]
        },
        "target": {
            "type": "object",
            "properties": 
            {
              "name": { "type": "string" },
              "type": { "type": "string" },
              "value": { "type": "number" },
              "dynamicState": { "$ref": "#/$defs/dynamicState" }
            },
            "required": [ "name", "type", "value", "dynamicState", "eoms" ]
        },
        "dynamicState":  {
            "type": "object",
            "properties":
            {
              "type": { "type": "string" },
              "stateData": { "$ref": "#/$defs/stateData" },
              "integratorOptions": { "$ref": "#/$defs/integratorOptions" },
              "integratorParameters": { "$ref": "#/$defs/integratorParameters" },
              "eoms": { "$ref/": "#/defs/eoms" }
            },
            "required": [ "type", "stateData", "eoms" ]
        },
        "stateData": {
            "type": "array",
            "items":
            {
              "anyOf": [
                { "type": "number" },
                { "type": "integer" }
              ]
            }
        },
        "integratorOptions": {
            "type": "object",
            "properties":
            {
              "h": { "type": "number" },
              "rtol": { "type": "number" },
              "atol": { "type": "number" },
              "eps": { "type": "number" },
              "nSteps": { "type": "number" }
            }
        },
        "integratorParameters": {
            "type": "array",
            "items": {
              "type": "object",
              "anyOf": [
                { "type": "string" },
                { "type": "number" },
                { "$ref": "#/$defs/stateData"}
              ]
            }
        },
        "eoms": {
            "type": "object",
            "properties":
            {
              "type": { "type": "string" }
            },
            "required": [ "type" ]
        },
        "model": {
            "type": "array",
            "items":
            {
                "$ref": "#/$defs/asset"
            },
            "minItems": 1
        },
        "asset": {
            "type": "object",
            "properties": {
                "name": { "type": "string" },
                "dynamicState": { "$ref": "#/$defs/dynamicState" },
                "subsystems": {
                    "type": "array",
                    "items": { "$ref": "#/$defs/subsystem" }
                },
                "constraints": {
                    "type": "array",
                    "items": { "$ref": "#/$defs/constraint" }
                }
            }
        },
        "subsystem": {
            "type": "object",
            "properties": {
                "type": { "type": "string" },
                "name": { "type": "string" },
                "src": { "type": "url" },
                "states": {
                    "type": "array",
                    "itmes": { "$ref": "#/$defs/state" }
                },
                "parameters": {
                    "type": "array",
                    "items": { "$ref": "#/$defs/parameter" }
                }
            }
        },
        "constraint": {
            "type": "object",
            "properties": {
                "value": "number",
                "subsystemName": "string",
                "type": "string",
                "name": "string",
                "state": {
                    "type": "object",
                    "properties": {
                        "type": "string",
                        "key": "string"
                    }
                }
            }
        },
        "state": {
            "type": "object",
            "properties": {
                "type": "string",
                "name": "string",
                "key": "string",
                "value": {
                    "anyOf": [
                        { "type": "boolean" },
                        { "type": "integer" },
                        { "type": "number" },
                        { "type": "object" },
                        { "type": "string" }
                      ]
                }
            }
        },
        "parameter": {
            "type": "object",
            "properties": {
                "type": { "type": "string" },
                "name": { "type": "string" },
                "value": {
                    "anyOf": [
                        { "type": "boolean" },
                        { "type": "integer" },
                        { "type": "number" },
                        { "type": "object" },
                        { "type": "string" }
                      ]
                }

            }
        },
        "dependencies": {
            "type": "array",
            "items": { "$ref": "#/$defs/dependency" }
        },
        "dependency": {
            "type": "object",
            "properties": {
                "subsystemName": { "type": "string" },
                "assetName": { "type": "string" },
                "depSubsystemName": { "type": "string" },
                "depAssetName": { "type": "string" }
            }
        },
        "evaluator": {
            "type": "object",
            "properties": {
                "type": "string",
                "src": "url",
                "className": "string",
                "keyRequests": {
                    "type": "array",
                    "items": { "$ref": "#/$defs/key" }
                }
            }
        },
        "key": {
            "type": "object",
            "properties": {
                "asset": { "type": "string" },
                "subsystem": { "type": "string" },
                "type": { "type": "string" }
            }
        }
    }
}
